<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:ignore="UnusedAttribute">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:isScrollContainer="true"
            android:layout_marginHorizontal="10dp"
            android:foreground="@android:drawable/list_selector_background"

            android:id="@+id/card"


            app:cardElevation="1dp"
            android:layout_marginBottom="5dp"
            >



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:layout_marginHorizontal="10dp"
                android:foreground="@android:drawable/list_selector_background"

                android:layout_marginVertical="5dp"
                >

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"

                    android:layout_marginTop="3dp"
                    android:src="@drawable/call_png"
                    android:id="@+id/logo"
                    tools:ignore="ContentDescription">

                </ImageView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/logo"
                    android:layout_marginStart="20dp"
                    android:id="@+id/stateNameTwo"
                    android:textSize="16sp"
                    android:text="@string/state_name"
                    >

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/logo"
                    android:layout_marginStart="20dp"
                    android:id="@+id/helpNo"
                    android:textSize="13sp"
                    android:layout_below="@+id/stateNameTwo"
                    android:layout_marginTop="2dp"
                    android:text="@string/state_name"
                    >

                </TextView>

            </RelativeLayout>





        </androidx.cardview.widget.CardView>

    </RelativeLayout>

